{
  "name": "software-edv-design-system",
  "version": "1.5.13",
  "description": "Design system para o Software EDV",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "components/**/*",
    "dist/**/*",
    "libs/**/*",
    "README.md",
    "*.js",
    "*.d.ts",
    "!src/**/*",
    "!tests/**/*",
    "!next-env.d.ts",
    "!babel.config.js",
    "!postcss.config.js",
    "!tailwind.config.js",
    "!components.json"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "move-files": "cpy \"dist/src/**\" dist",
    "copy-fonts": "cpy \"src/assets/fonts/*.ttf\" dist/assets/fonts",
    "remove-dir": "rimraf \"dist/src\" \"dist/tests\"",
    "build": "npm run clean && tsc && npm run move-files && npm run remove-dir",
    "build:publish": "npm run build && npm publish",
    "publish": "npm publish",
    "publish:test": "npm publish --tag test",
    "build:publish:test": "npm run build && npm publish --tag test",
    "publish:public": "npm publish --access public",
    "patch": "npm version patch",
    "patch:publish": "npm run patch && npm run build:publish",
    "test": "jest",
    "test:watch": "jest --watch",
    "format": "npx prettier ./src/** --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PEAL-26/software-edv/tree/design-system"
  },
  "author": "PEAL-26",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/PEAL-26/software-edv/issues"
  },
  "homepage": "https://peal-26.github.io/software-edv-design-system",
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "@babel/preset-typescript": "^7.23.2",
    "@jest/globals": "^29.7.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.7.0",
    "@types/react": "^18.2.23",
    "@types/react-dom": "^18.2.13",
    "@types/uuid": "^9.0.4",
    "babel-jest": "^29.7.0",
    "babel-plugin-inline-react-svg": "^2.0.2",
    "babel-plugin-module-resolver": "^5.0.0",
    "cpy-cli": "^5.0.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "prettier-plugin-organize-imports": "^3.2.3",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.3.3",
    "ts-node": "^10.9.1",
    "tsx": "^4.6.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-popover": "^1.1.1",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-toggle-group": "^1.0.4",
    "@tippyjs/react": "^4.2.6",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "cmdk": "^1.0.0",
    "fs-extra": "^11.2.0",
    "react-dropzone": "^14.1.2",
    "tailwind-merge": "^1.14.0",
    "tailwind-variants": "^0.1.14",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^9.0.1"
  },
  "peerDependencies": {
    "next": "^13.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.11.0",
    "sweetalert2": "^11.11.0",
    "sweetalert2-react-content": "^5.0.7"
  }
}
