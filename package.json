{
  "name": "software-edv-design-system",
  "version": "1.0.10",
  "description": "Design system para o Software EDV",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "components/**/*",
    "dist/**/*",
    "libs/**/*",
    "README.md",
    "*.js",
    "*.d.ts",
    "!src/**/*",
    "!tests/**/*"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "move-files": "cpy \"dist/src/**\" dist",
    "remove-dir": "rimraf \"dist/src\" \"dist/tests\"",
    "build": "npm run clean && tsc && npm run move-files && npm run remove-dir",
    "build:publish": "npm run build && npm publish",
    "publish": "npm publish",
    "patch": "npm version patch",
    "test": "jest",
    "test:watch": "jest --watch",
    "format": "npx prettier . --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PEAL-26/software-edv/tree/design-system"
  },
  "author": "PEAL-26",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/PEAL-26/software-edv/issues"
  },
  "homepage": "https://peal-26.github.io/software-edv-design-system",
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "@babel/preset-typescript": "^7.23.2",
    "@jest/globals": "^29.7.0",
    "@types/node": "^20.7.0",
    "@types/react": "^18.2.23",
    "@types/react-dom": "^18.2.13",
    "@types/uuid": "^9.0.4",
    "babel-jest": "^29.7.0",
    "cpy-cli": "^5.0.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "prettier-plugin-organize-imports": "^3.2.3",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@tippyjs/react": "^4.2.6",
    "lottie-react": "^2.4.0",
    "react-dropzone": "^14.2.3",
    "react-icons": "^4.11.0",
    "react-select": "^5.7.5",
    "sweetalert2": "^11.6.13",
    "sweetalert2-react-content": "^5.0.7",
    "tailwind-merge": "^1.14.0",
    "tailwind-variants": "^0.1.14",
    "uuid": "^9.0.1"
  },
  "peerDependencies": {
    "next": "^13.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
